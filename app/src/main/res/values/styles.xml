<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Title style -->
    <style name="title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:layout_marginBottom">@dimen/margin_below_title</item>
    </style>

    <!-- Date and section style -->
    <style name="detailes">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

</resources>
